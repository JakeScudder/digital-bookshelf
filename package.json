{
  "name": "server",
  "version": "1.0.0",
  "description": "Server side of digital bookshelf",
  "main": "server.js",
  "engines": {
    "node": "^15.11"
  },
  "scripts": {
    "client-install": "npm install --prefix my-bookshelf",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix my-bookshelf",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix my-bookshelf && npm run build --prefix my-bookshelf"
  },
  "author": "Jake Morris",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bookcovers": "0.0.2",
    "concurrently": "^5.3.0",
    "config": "^3.3.2",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.8"
  },
  "devDependencies": {
    "nodemon": "^2.0.4"
  }
}
